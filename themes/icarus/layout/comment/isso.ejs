<% if (!comment.url) { %>
<div class="notification is-danger">
    You forgot to set the <code>url</code> for Isso. Please set it in <code>_config.yml</code>.
</div>
<% } else { %>
<div id="isso-thread"></div>
<script data-isso="//<%= comment.url %>" src="//<%= comment.url %>/js/embed.min.js">
</script>
<% } %>

